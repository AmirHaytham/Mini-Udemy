
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <link href="~/Content/MainPage.css" rel="stylesheet" />
    <title>Home</title>
</head>
<body>
    <div class="split left">
        <div class="centered">


        </div>
    </div>

    <div class="split right">
        <div class="centered">
            <form role="search" action="~/MainPage/Index" method="post">
                <label for="search">Search</label>
                <input id="search" type="search" placeholder="Search..." autofocus required />
                <button type="submit">Go</button>
                <div class="container">
            
                    @Html.DropDownList("Dept_Name", ViewBag.Departments as SelectList, "Select Department", new { @class = "dropdown", onchange = "this.form.submit();" })
            
                </div>
            </form>
        </div>
    </div>
</body>
</html>
